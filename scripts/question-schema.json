{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/schemas/ctet-question-file.json",
  "title": "CTET Question File",
  "description": "Canonical CTET question file: a top-level object with paper metadata and a questions array. The `paper` property must be either 'Paper 1' or 'Paper 2'.",
  "type": "object",
  "required": ["paper","term","year","subject","language","questions"],
  "properties": {
    "paper": {"type":"string", "enum":["Paper 1","Paper 2"], "description": "Which CTET paper this file belongs to."},
    "term": {"type":"string", "description": "Term or month label, e.g., December."},
    "year": {"type":"integer", "description": "Year as integer, e.g., 2024."},
    "subject": {"type":"string", "description": "Subject or paper section, e.g., Mathematics."},
    "language": {"type":"string", "description": "Language of the questions, e.g., English or Hindi."},
    "questions": {
      "type":"array",
      "minItems": 1,
      "items": {
        "type":"object",
        "required":["id","question","options","correct_answer","explanation","topic","difficulty"],
        "properties":{
          "id": {"type":"string", "description": "Unique question identifier within the file."},
          "question": {"type":"string", "description": "Question text."},
          "options": {
            "type":"array",
            "minItems": 2,
            "items":{"type":"string"},
            "description": "Array of option strings."
          },
          "correct_answer": {"type":"string", "description": "The correct answer represented as the option text (normalized)."},
          "explanation": {"type":"string", "description": "Detailed explanation for the correct answer."},
          "topic": {"type":"string", "description": "Topic or chapter name."},
          "difficulty": {"type":"string","enum":["Easy","Medium","Hard"], "description": "Difficulty level."},
          "attachments": {"type":"array","items":{"type":"string"}, "description": "Optional attachments (paths or URLs)."}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "paper": "Paper 2",
      "term": "December",
      "year": 2024,
      "subject": "Mathematics",
      "language": "English",
      "questions": [
        {
          "id": "Maths-Dec24-Q1",
          "question": "What is 2+2?",
          "options": ["1","2","3","4"],
          "correct_answer": "4",
          "explanation": "2+2 equals 4.",
          "topic": "Arithmetic",
          "difficulty": "Easy",
          "attachments": []
        }
      ]
    }
  ]
}
